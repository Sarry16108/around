<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="AnimationRightInLeftOut">
        <item name="android:windowEnterAnimation">@anim/in_right_to_left</item>
        <item name="android:windowExitAnimation">@anim/out_left_to_right</item>
    </style>
    

    <declare-styleable name="TagFlowLayout">
        <attr name="tag_gravity" format="integer"/>
        <attr name="max_select" format="integer"/>
    </declare-styleable>

    <declare-styleable name="AmountView">
        <attr name="btn_width" format="dimension"/>
        <attr name="num_width" format="dimension"/>
        <attr name="num_text_size" format="dimension"/>
        <attr name="btn_text_size" format="dimension"/>
        <attr name="text_color" format="color"/>
    </declare-styleable>
</resources>
