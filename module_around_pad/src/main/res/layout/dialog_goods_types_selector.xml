<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="60dp"
    android:paddingTop="30dp"
    android:paddingRight="60dp"
    android:paddingBottom="40dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sfy_black"
                android:textSize="25sp"
                tools:text="名字" />

            <TextView
                android:id="@+id/ext_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="10dp"
                android:textColor="@color/sfy_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:textColor="@color/sfy_yellow"
                android:textSize="25sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_close" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="杯型"
                android:textColor="@color/sfy_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/cup_small"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="小杯"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cup_middle"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="中杯"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cup_big"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="大杯"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cup_bigger"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="超大杯"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="温度"
                android:textColor="@color/sfy_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/hot"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="热"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/warm"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="常温"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/cool"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="去冰"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ice_cool"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="冰"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="加料"
                android:textColor="@color/sfy_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/milk"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="奶油"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sugger"
                    android:layout_width="131dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_circle_stroke_yellow_gray"
                    android:gravity="center"
                    android:text="风味糖浆"
                    android:textColor="@drawable/selector_color_yellow_gray"
                    android:textSize="15sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/settlement"
                android:layout_width="300dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/selector_rect_round_yelllow_gray"
                android:gravity="center"
                android:text="选好了"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>