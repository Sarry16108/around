<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="38dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_back_arrow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="@color/sfy_black"
            android:gravity="center"
            android:text="填写订单"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/title_bar"
        android:layout_above="@id/bottom_bar"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
            <RelativeLayout
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:background="@drawable/shape_line_bottom_light_gray">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sfy_gray"
                    android:textSize="20sp"
                    android:layout_below="@id/name"
                    android:layout_marginTop="30dp"/>
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="30dp"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/reach_time"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="送达时间"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <TextView
                    android:id="@+id/time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="尽快送达"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pay_type"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_line_bottom_light_gray"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付方式"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <TextView
                    android:id="@+id/type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="支付宝"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/merchant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textSize="25sp"
                android:textColor="@color/sfy_black"
                android:layout_marginTop="15dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/datas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <LinearLayout
                android:id="@+id/delivery_price"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="配送费"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="¥0.00"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invoice_type"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/shape_line_bottom_light_gray"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="发票信息"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <TextView
                    android:id="@+id/sel_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="不开发票"
                    android:textSize="25sp"
                    android:textColor="@color/sfy_black"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_arrow_right"
                    android:layout_marginLeft="30dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应付金额"
            android:textColor="@color/sfy_gray"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/bottom_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/sfy_yellow"
            android:textSize="25sp"
            android:layout_alignBottom="@id/count_text"
            android:layout_alignBaseline="@id/count_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/count_text"/>


        <TextView
            android:id="@+id/settlement"
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:background="@color/sfy_yellow"
            android:gravity="center"
            android:text="去支付"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:clickable="true"/>
    </RelativeLayout>
</RelativeLayout>