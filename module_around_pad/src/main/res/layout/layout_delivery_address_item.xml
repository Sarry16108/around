<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center_vertical"
    android:background="@drawable/shape_line_bottom_light_gray">
    <TextView
        android:id="@+id/check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:background="@drawable/selector_circle_yelllow_white"/>
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/sfy_black"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/sfy_gray"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/edit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/icon_edit"/>
</LinearLayout>