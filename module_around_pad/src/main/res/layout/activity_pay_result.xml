<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="38dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">


        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_back_arrow"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:textColor="@color/sfy_black"
            android:gravity="center"
            android:text="支付结果"/>
    </LinearLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@mipmap/icon_success"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写支付成功"
        android:textSize="25sp"
        android:textColor="@color/sfy_black"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/ext_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="填写支付成功"
        android:textSize="20sp"
        android:textColor="@color/sfy_gray"
        android:layout_marginTop="15dp" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">
        <TextView
            android:id="@+id/home"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:text="回到首页"
            android:textColor="@color/sfy_black"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@drawable/shape_small_round_stroke_gray"/>
        <TextView
            android:id="@+id/check_order"
            android:layout_width="135dp"
            android:layout_height="55dp"
            android:text="查看订单"
            android:textColor="@color/sfy_black"
            android:textSize="25sp"
            android:layout_marginLeft="65dp"
            android:gravity="center"
            android:background="@drawable/shape_small_round_stroke_gray"/>
    </LinearLayout>

</LinearLayout>